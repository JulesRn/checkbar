
<div class="homepage">

  <div class="banner" style="background: linear-gradient(0deg, rgba(0,0,0,1) 0%, rgba(0,0,0,0.8) 20%, rgba(0,0,0,0.4) 100%),url('https://images.pexels.com/photos/3201920/pexels-photo-3201920.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940'); background-size: cover; min-height: 100vh;">
    <div class="menu row justify-content-between px-5 py-4">
      <div class="column">
        <%= link_to "Checkbar", bars_path , style: "font-size:32px; text-decoration: none; color: white;"%>
      </div>
      <div class="column">
        <%= link_to "Create a bar", new_bar_path, class: "btn btn-outline-light" %>
        <%  if !user_signed_in? %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-light" %>
        <% else %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-outline-light" %>
        <% end %>
      </div>
    </div>

        <div class="container justify-content-center text-center text-light py-3">
          <h1 style="font-size: 80px">Bars</h1>
          <h3>Find the best place to celebrate your event</h3>

            <%= simple_form_for :filter, url: bars_path, method: :get do |f| %>
        <div class="row">
            <div class="col">
              <%= f.input :name, class: "form-control"%>
            </div>
            <div class="col">
              <%= f.input :category, collection: Bar::CATEGORYS, class: "form-control"%>
            </div>
              <div class="col d-flex align-items-center mt-3">
                  <%= f.button :submit, class: "btn btn-outline-light form-control"%>
            </div>
        </div>
        <% end %>
      </div>
    </div>





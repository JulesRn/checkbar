<%= simple_form_for(@bar) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :category, collection: Bar::CATEGORYS %>
  <%= f.input :capacity %>
  <%= simple_fields_for :days do |x| %>
    <% Bar::OPENING_DAYS.each do |day| %>
      <%= x.input day.to_sym, as: :boolean %>
    <% end %>
  <% end %>
  <%= f.input :opening_hours %>
  <%= f.input :closing_hours %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.button :submit, class: "btn btn-primary"%>
<% end %>

